{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016"],
    "outDir": ".ava",
    "sourceMap": true,
    "target": "ES5",
    "typeRoots": ["src/typings"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true
  },
  "include": ["test/**/*"]
}
