{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "outDir": "dist",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["src/proto"]
}
