{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": ["dom", "es2015", "es2016"],
    "sourceMap": true,
    "target": "ES5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/proto"]
}
