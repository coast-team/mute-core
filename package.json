{
  "name": "mute-core",
  "description": "",
  "version": "0.4.0",
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/mute-core"
  },
  "keywords": [
    "crdt",
    "data-structures",
    "sync",
    "collaboration"
  ],
  "author": "Matthieu Nicolas <matthieu.nicolas@inria.fr",
  "contributors": [
    "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
    "Quentin Tardivon"
  ],
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc --outDir dist/commonjs && tsc -m es6 --types --outDir dist/esm",
    "postbuild": "mkdir dist/types/proto && cp src/proto/index.d.ts dist/types/proto/ && npm run postbuildcommonjs && npm run postbuildesm",
    "postbuildcommonjs": "mkdir dist/commonjs/proto && npm run protobasicconf -- -w commonjs -o dist/commonjs/proto/index.js",
    "postbuildesm": "mkdir dist/esm/proto && npm run --silent protobasicconf -- -w es6 | babel -o dist/esm/proto/index.js",
    "check": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json",
    "pretest": "rm -rf .ava && tsc -p tsconfig.ava.json && mkdir .ava/src/proto && npm run protobasicconf -- -w commonjs -o .ava/src/proto/index.js",
    "test": "ava",
    "protobasicconf": "pbjs -t static-module --no-verify --no-delimited --no-convert src/proto/index.proto",
    "proto": "npm run protobasicconf -- -w es6 -o src/proto/index.js",
    "postproto": "pbts -o src/proto/index.d.ts src/proto/index.js"
  },
  "dependencies": {
    "mute-structs": "^0.4.0",
    "protobufjs": "^6.8.4",
    "rxjs": "^5.5.6",
    "safe-any": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^8.5.7",
    "ava": "^0.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "~2.4.2"
  },
  "ava": {
    "files": [
      ".ava/test/**/*.test.js"
    ],
    "source": [
      "test"
    ],
    "timeout": "5s"
  }
}
